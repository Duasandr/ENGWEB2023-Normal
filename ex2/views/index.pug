extends layout
block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 PlantasApp 
      button.w3-button.w3-left
    .w3-card-4
      .w3-container
        table.w3-table-all
          tr
            th Id 
            th Freguesia 
            th Espécie
            th Estado 
            th Número de intervenções

          each item in list
              tr
                td 
                  a(href="/plantas/" + item._id) #{item._id}
                td #{item.Freguesia}
                td 
                   a(href="/plantas/especie/" + item.Espécie) #{item.Espécie}
                td #{item.Estado}
                td #{item["Número de intervenções"]}

    footer.w3-container.w3-teal
      h5 Generated by PlantasApp
